<resources>

  <style name="Theme.App" parent="BaseTheme">
    <item name="cardBackgroundColor">@color/white</item>
    <item name="android:colorBackground">@color/blue_50</item>
    <item name="songCardElevation">0dp</item>
    <item name="albumCardElevation">0dp</item>
    <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
  </style>

  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight">
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/status_bar</item>
    <item name="android:windowLightStatusBar">?isLightTheme</item>
    <!-- Navigation bar color. -->
    <item name="android:navigationBarColor">@color/surface900</item>
    <item name="android:windowLightNavigationBar">?isLightTheme</item>
    <!-- Customize your theme here. -->
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    <item name="tabStyle">@style/Widget.App.TabLayout</item>
    <item name="textAppearanceButton">?textAppearanceBody1</item>

    <item name="cornerSizeLargeComponent">0dp</item>
    <item name="cornerSizeMediumComponent">6dp</item>
    <item name="cornerSizeSmallComponent">6dp</item>

    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>

  </style>

</resources>